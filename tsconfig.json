{
  "compilerOptions": {
    "target": "ESnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "cypress"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@mock/*": ["./src/__tests__/mock/*"],
      "@model/*": ["./src/model/*"],
      "@ressources/*": ["./src/ressources/*"],
      "@scss/*": ["./src/scss/*"],
      "@pages/*": ["./src/pages/*"],
      "@router/*": ["./src/router/*"],
      "@util/*": ["./src/views/common/util/*"],
      "@hook/*": ["./src/hook/*"],
      "@composants/*": ["./src/composants/*"],
      "@widget/*": ["./src/views/common/widget/*"],
      "@utilMetier/*": ["./src/views/common/utilMetier/*"],
      "@views/*": ["./src/views/*"]
    }
  },
  "include": ["src", "e2e"]
}
