{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome Debug",
      "runtimeExecutable": "/usr/bin/chromium",
      "url": "http://localhost/rece/rece-ui",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "/data/src/*": "${webRoot}/*"
      }
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Firefox Debug",
      "reAttach": true,
      "url": "http://localhost/rece/rece-ui",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [
        {
          "url": "file:///data/src",
          "path": "${workspaceFolder}/src"
        }
      ]
    }
  ]
}
