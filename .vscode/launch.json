{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest single run all tests",
      "runtimeExecutable": "/var/tmp/nodejs-sonarlint/bin/node",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--verbose", "-i", "--no-cache"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest watch all tests",
      "runtimeExecutable": "/var/tmp/nodejs-sonarlint/bin/node",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--verbose", "-i", "--no-cache", "--watchAll"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest watch current file",
      "runtimeExecutable": "/var/tmp/nodejs-sonarlint/bin/node",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": [
        "${fileBasename}",
        "--verbose",
        "-i",
        "--no-cache",
        "--watchAll"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "runtimeExecutable": "/var/tmp/nodejs-sonarlint/bin/node",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--verbose", "-i", "--no-cache", "--runInBand"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome Debug",
      "runtimeExecutable": "/usr/bin/chromium",
      "url": "http://localhost/rece/rece-ui",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "/data/src/*": "${webRoot}/*"
      }
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Firefox Debug",
      "reAttach": true,
      "url": "http://localhost/rece/rece-ui",
      "webRoot": "${workspaceFolder}/src",
      "pathMappings": [
        {
          "url": "file:///data/src",
          "path": "${workspaceFolder}/src"
        }
      ]
    }
  ]
}
